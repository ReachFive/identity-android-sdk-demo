<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100" >
    <TextView
        android:id="@+id/trustedDeviceUserId"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:layout_height="match_parent"
        android:text="User Id" />
    <TextView
        android:id="@+id/trustedDeviceCreatedAt"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:layout_height="match_parent"
        android:text="CreatedAt" />
    <TextView
        android:id="@+id/deviceOperatingSystem"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="match_parent"
        android:text="Operating system" />

    <TextView
        android:id="@+id/deviceClass"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="15"
        android:layout_height="match_parent"
        android:text="Device class" />
    <TextView
        android:id="@+id/deviceName"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="20"
        android:layout_height="match_parent"
        android:text="Device name" />
    <ImageButton
        android:id="@+id/removeTrustedDevice"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_weight="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
